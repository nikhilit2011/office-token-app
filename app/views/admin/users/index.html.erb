<div class="container">
  <h2 class="mb-4 text-center">User Management</h2>

  <div class="text-end mb-3">
    <%= link_to "Add New User", new_admin_user_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Assigned Counter</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.assigned_counter.presence || "-" %></td>
          <td>
            <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-outline-primary me-1" %>
            <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
